/* -------------------------------------------------- *\
|*
|* MOUSE
|*
\* -------------------------------------------------- */

.mouse

  /* ------------------------- *\
  |* POINTER
  \* ------------------------- */

  .pointer
    position absolute
    left -($size-mouse / 2)
    top -($size-mouse / 2)
    width $size-mouse
    height $size-mouse
    background-color $color-txt
    border-radius 100%
    transform translate(0, 0)
    will-change transform

  /* ------------------------- *\
  |* PARTICLES
  \* ------------------------- */

  .particles
    position absolute
    left -($size-mouse / 2)
    top -($size-mouse / 2)
    width $size-mouse
    height $size-mouse
    transform translate(0, 0)
    will-change opacity, transform

    .particle
      position absolute
      left 0
      top 0
      width 100%
      height 100%

      &::after
        content ''
        position absolute
        left ($size-mouse / 4)
        top ($size-mouse / 4) - (5 * $size-mouse)
        width ($size-mouse * 2)
        height ($size-mouse / 2)
        background-color $color-txt
        border-radius 100%
        transform-origin 50% (5 * $size-mouse)
        transform rotateZ(0)
        animation particle-movement linear infinite
        animation-duration 1s
        will-change transform

      &.index-1
        transform rotateZ(0) scaleX(0.25)
        &::after
          animation-delay 0s
      &.index-2
        transform rotateZ(60deg) scaleX(0.25)
        &::after
          animation-delay (1s / 3)
      &.index-3
        transform rotateZ(120deg) scaleX(0.25)
        &::after
          animation-delay (2s / 3)
